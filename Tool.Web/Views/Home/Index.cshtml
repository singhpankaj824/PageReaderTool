@model Tool.Web.Models.DataModel
@{
    ViewBag.Title = "Home Page";
}

<main>

        <div class="row justify-content-center align-items-center pt-5 pb-5" style="height:600px">
            <section class="col-md-6" aria-labelledby="gettingStartedTitle">
                <h4 id="gettingStartedTitle text-centre" style="padding-bottom:30px;text-align:center">WEB PAGE WORD COUNTER AND IMAGE GALLERY</h4>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    Html.ValidationSummary(true);
                    <div class="input-group mb-3">
                        @Html.TextBoxFor(m => m.URL, new { @class = "form-control", @placeholder = "https://example.com", @required="true"})

                        <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Submit</button>
                        <br />

                    </div>
                    @Html.ValidationMessageFor(m => m.URL, "", new { @class = "text-danger" })
                }
            </section>
        </div>

   
</main>

